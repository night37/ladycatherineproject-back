{
    "name": "mithridatem/router",
    "description": "Lightweight PHP routing library with configurable authorization and controller resolution.",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/evaluationWeb/router-librairie",
    "support": {
        "issues": "https://github.com/evaluationWeb/router-librairie/issues",
        "source": "https://github.com/evaluationWeb/router-librairie"
    },
    "authors": [
        {
            "name": "mithridatem"
        }
    ],
    "keywords": ["router", "routing", "http"],
    "require": {
        "php": "^8.1"
    },
    "autoload": {
        "psr-4": {
            "Mithridatem\\Routing\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mithridatem\\Routing\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "scripts": {
        "test": "phpunit",
        "check": [
            "@test"
        ]
    }
}